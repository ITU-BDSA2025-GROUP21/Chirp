@page "/information"
@model Chirp.Web.Pages.InformationPageView
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    var name = string.Empty;
    var email = string.Empty;
    var creationDate = string.Empty;
    var id = string.Empty;

    if(Model.Author != null)
    {
        name = Model.Author.Name;
        email = Model.Author.Email;
        creationDate = Model.Author.CreationDate;
        id = Model.Author.Id;
    }

}

<div>

    <h2> @name Information </h2>
    <h3>Name: @name.</h3>
    <h3>Email: @email</h3>
    <h3>Creation Date: @creationDate</h3>
    <h3>Total Cheeps sent: @Model.CurrentCheeps</h3>
    <h3>Following:</h3>

    @if (Model.Following.Any())
    {

        <ul id="messagelist" class="cheeps">
            @foreach (var author in Model.Following)
            {
                @if (User.Identity != null && User.Identity.IsAuthenticated && author != null && author.Id != id)
                {
                    <li>
                        <p>
                        <div style="display:flex;justify-content:start;align-items:center;">
                            <a href="/@author.Id">@author.Name</a>
                                <form method="post" asp-page-handler="Unfollow" style="display:inline;">
                                    <input type="hidden" name="followeeId" value="@author.Id" />
                                    <button class="small-button" type="submit">Unfollow</button>
                                </form>
                        </div>

                    </p>
                </li>
                }
            }
        </ul>
    }
    else
    {
        <em>You are not following anyone yet.</em>
    }
    <form method="post">
        <button asp-page-handler="ForgetMe"
                onclick="return confirm('Are you sure you want to delete everything?');">
            Forget Me
        </button>
    </form>


</div>