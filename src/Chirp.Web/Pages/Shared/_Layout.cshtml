@inject Chirp.Core.Services.IAuthorService authorService

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/Icon1.png" alt="Icon1"/>Chirp!</h1>
        <div class=navigation>
            @if (authorService.SignIn(User))
            {
                <div>
                    <a href="/@(authorService.GetCurrentAuthorEmail())">my timeline</a> |
                    <a href="/">public timeline</a> |
                    <a id="logout" asp-area="Identity" asp-page="/Account/Logout">logout [@(authorService.GetCurrentAuthorEmail())]</a>
                </div>
            }
            else
            {
                <div>
                    <a href="/">public timeline</a> |
                    <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a> |
                    <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            }
        </div>
    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
