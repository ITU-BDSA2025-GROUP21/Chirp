@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Current profile picture</label><br />
                <img src="@Model.CurrentAvatar" alt="Current profile picture" class="cheep-profile-pic" />
            </div>

            <div class="mb-3">
                <label asp-for="Input.Avatar" class="form-label"></label>
                <input asp-for="Input.Avatar" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Input.Avatar" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.RemoveAvatar" class="form-check-input" type="checkbox" />
                <label asp-for="Input.RemoveAvatar" class="form-check-label"></label>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
