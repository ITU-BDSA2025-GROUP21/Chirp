@using Microsoft.AspNetCore.Identity
@using Chirp.Infrastructure.Models

@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <text> | </text>
    <form id="logoutForm" style="display: inline;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button id="logout" type="submit" style="background: none; border: none; color: #0366d6; text-decoration: underline; cursor: pointer;">Logout</button>
    </form>
}
else
{
    <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <text> | </text>
    <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
